{
  "title": "Nginx Gateway Monitoring",
  "tags": ["nginx", "gateway"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "Nginx Requests per Second",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(nginx_http_requests_total[1m])",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Nginx Active Connections",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "nginx_connections_active",
          "legendFormat": "Active",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "Nginx Response Time",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(nginx_http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Rate Limit Status",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "rate(nginx_http_requests_total{status=~\"429\"}[1m])",
          "refId": "A"
        }
      ]
    }
  ]
}
